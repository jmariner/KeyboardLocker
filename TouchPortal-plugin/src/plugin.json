{
    "sdk": 6,
    "version": 1,
    "name": "KeyboardLocker Link",
    "id": "keyboardlocker-link",
    "plugin_start_cmd": "\"%TP_PLUGIN_FOLDER%KeyboardLocker-TouchPortal\\KeyboardLocker-TouchPortal.exe\"",
    "configuration": {
        "colorDark": "#333333",
        "colorLight": "#555555"
    },
    "settings": [],
    "categories": [
        {
            "id": "keyboardlocker-link",
            "name": "KeyboardLocker Link",
            "imagepath": "\"%TP_PLUGIN_FOLDER%KeyboardLocker-TouchPortal\\icon.png\"",
            "actions": [
                {
                    "id": "keyboardlocker-link-set-locked",
                    "prefix": "KeyboardLocker",
                    "name": "Set Lock State",
                    "type": "communicate",
                    "format": "{$keyboardlocker-link-set-locked-state$} Keyboard Lock",
                    "tryInline": true,
                    "hasHoldFunctionality": false,
                    "data": [
                        {
                            "id": "keyboardlocker-link-set-locked-state",
                            "type": "choice",
                            "label": "Action",
                            "default": "Toggle",
                            "valueChoices": [
                                "Toggle",
                                "Enable",
                                "Disable"
                            ]
                        }
                    ]
                }
            ],
            "events": [
                {
                    "id": "keyboardlocker-link-locked-changed",
                    "name": "Keyboard Lock State Changed",
                    "format": "When Keyboard $val",
                    "type": "communicate",
                    "valueType": "choice",
                    "default": "",
                    "valueChoices": [
                        "Locked",
                        "Unlocked"
                    ],
                    "valueStateId": "keyboardlocker-link-locked"
                }
            ],
            "states": [
                {
                    "id": "keyboardlocker-link-locked",
                    "type": "choice",
                    "desc": "Keyboard Lock State",
                    "default": "",
                    "valueChoices": [
                        "Locked",
                        "Unlocked"
                    ]
                }
            ]
        }
    ]
}